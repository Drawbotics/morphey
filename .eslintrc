{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "strict": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "no-constant-condition": 0,
    "no-unused-vars": 1,
    "jsx-quotes": 1,
    "quotes": [2, "single"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "semi": [2, "always"]
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  }
}
